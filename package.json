{
    "name": "smalise",
    "displayName": "Smalise",
    "description": "Language support for Smali(Davilk bytecode)",
    "publisher": "LoyieKing",
    "icon": "images/icon.png",
    "version": "0.0.5",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:smali"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Smalise",
            "properties": {
                "smalise.cache.memoryLimit": {
                    "type": "integer",
                    "default": 128,
                    "description": "Maximum memory (MB) allowed for the LRU cache storing all the smali codes. Set it to a larger number may speed up operations like renaming symbols or searching references."
                },
                "smalise.cache.loadingFileLimit": {
                    "type": "integer",
                    "default": 32,
                    "description": "Maximum number of loading files allowed for the LRU cache. Set it to a larger number may speed up the initialization process."
                }
            }
        },
        "languages": [
            {
                "id": "smali",
                "aliases": [
                    "Smali Bytecode",
                    "smali"
                ],
                "extensions": [
                    "smali"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "smali",
                "scopeName": "source.smali",
                "path": "./syntaxes/smali.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/lru-cache": "^5.1.0",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.13.5",
        "@types/vscode": "^1.44.0",
        "@typescript-eslint/eslint-plugin": "^2.31.0",
        "@typescript-eslint/eslint-plugin-tslint": "^2.31.0",
        "@typescript-eslint/parser": "^2.31.0",
        "eslint": "^6.8.0",
        "eslint-plugin-import": "^2.20.2",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "lru-cache": "^5.1.1",
        "vscode-languageclient": "^6.1.3"
    },
    "repository": {
        "url": "https://github.com/LoyieKing/Smalise",
        "type": "git"
    }
}
